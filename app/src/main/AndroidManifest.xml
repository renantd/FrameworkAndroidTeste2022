<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.framework.com.framework">

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_teste"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_teste"
        android:supportsRtl="true"
        android:theme="@style/Theme.Framework">

        <activity
            android:name=".ui.activity.carrinho.Carrinho"
            android:exported="false"
            android:theme="@style/Theme.NoTitleNavigation"/>

        <activity
            android:name=".ui.activity.login.Login"
            android:exported="false"
            android:theme="@style/Theme.NoTitleNavigation"/>

        <activity
            android:name=".ui.activity.apresentacao.Apresentacao"
            android:exported="true"
            android:theme="@style/Theme.NoTitleNavigation">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.activity.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NoTitleNavigation" />
    </application>

</manifest>